<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg"

    tools:context="xyz.coders_note.masjidku.CompassActivity">

    <TextView
        android:id="@+id/title_cari"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="PENUNJUK KIBLAT"
        android:textSize="25dp"
        android:layout_marginBottom="32dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_gravity="center"
        android:id="@+id/layoutKompas"
        android:layout_width="300dp"
        android:layout_height="300dp">
        <ImageView
            android:id="@+id/imageViewCompass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/kompass" />
        <ImageView
            android:id="@+id/imageKiblat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/kiblat" />
    </RelativeLayout>

</LinearLayout>
